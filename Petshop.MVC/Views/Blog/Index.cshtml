@model List<BlogViewModel>

<section id="banner" class="py-3" style="background: #F9F3EC;">
    <div class="container">
        <div class="hero-content py-5 my-3">
            <h2 class="display-1 mt-3 mb-0">Blog</h2>
        </div>
    </div>
</section>

<div class="my-5 py-5">
    <div class="container">
        <div class="row entry-container" id="blogContainer">
            @foreach (var blog in Model)
            {
                <div class="entry-item col-md-4 my-4">
                    <div class="z-1 position-absolute rounded-3 m-2 px-3 pt-1 bg-light">
                        <h3 class="secondary-font text-primary m-0">@blog.PublishDate.Day</h3>
                        <p class="secondary-font fs-6 m-0">@blog.PublishDate.ToString("MMM").ToUpper()</p>
                    </div>
                    <div class="card position-relative">
                        <a asp-action="Details" asp-route-id="@blog.Id">
                            <img src="~/images/@blog.ImageName" class="img-fluid rounded-4" alt="@blog.Title">
                        </a>
                        <div class="card-body p-0">
                            <a asp-action="Details" asp-route-id="@blog.Id">
                                <h3 class="card-title pt-4 pb-3 m-0">@blog.Title</h3>
                            </a>
                            <div class="card-text">
                                <p class="blog-paragraph fs-6">
                                    @(blog.Content.Length > 150 ? blog.Content.Substring(0, 150) + "..." : blog.Content)
                                </p>
                                <a asp-action="Details" asp-route-id="@blog.Id" class="blog-read">read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div style="text-align:center;">
            <button class="btn btn-primary" id="blogLoadMore" style="margin-top:20px">Load more</button>
        </div>
        <input type="hidden" id="blogCount" value="@ViewBag.BlogCount" />
    </div>
</div>
